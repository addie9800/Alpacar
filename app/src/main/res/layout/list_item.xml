<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/list_item_linear"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/plaetze_circle"
        android:gravity="center"
        tools:text="2"
        android:id="@+id/list_item_freie_plaetze"
        android:textColor="@android:color/white"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:maxLines="1"
            tools:text="Abfahrt"
            android:gravity="center"
            android:id="@+id/list_item_abfahrt"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/menu"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/list_item_ankunft"
            android:layout_height="22dp"
            android:gravity="center"
            android:maxLines="1"
            tools:text="Ankunft" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/list_item_distance"
            android:layout_height="30dp"
            android:gravity="center"
            tools:text="365 km"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/list_item_time"
            android:layout_height="30dp"
            android:gravity="center"
            tools:text="5 h 32 "/>

    </LinearLayout>
</LinearLayout>